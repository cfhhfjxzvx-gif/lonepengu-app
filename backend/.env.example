# LonePengu API Environment Variables
# Copy this file to .env and fill in your values

# ═══════════════════════════════════════════════════════════════
# DATABASE
# ═══════════════════════════════════════════════════════════════
DATABASE_URL=postgresql://username:password@localhost:5432/lonepengu_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=lonepengu_db
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSL=false

# ═══════════════════════════════════════════════════════════════
# SERVER
# ═══════════════════════════════════════════════════════════════
PORT=3000
NODE_ENV=development

# ═══════════════════════════════════════════════════════════════
# JWT AUTHENTICATION
# ═══════════════════════════════════════════════════════════════
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=30d
JWT_REFRESH_EXPIRES_IN=90d

# ═══════════════════════════════════════════════════════════════
# CORS
# ═══════════════════════════════════════════════════════════════
CORS_ORIGIN=http://localhost:8080,http://localhost:3000

# ═══════════════════════════════════════════════════════════════
# RATE LIMITING
# ═══════════════════════════════════════════════════════════════
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
